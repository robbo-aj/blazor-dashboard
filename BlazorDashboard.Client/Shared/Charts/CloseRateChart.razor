@using BlazorDashboard.Models
@using BlazorDashboard.DataRetrieval
@using Telerik.Blazor.Components.Chart
@using Telerik.Blazor

<TelerikChart>
	<TelerikChartSeriesItems>
		<TelerikChartSeries Type="ChartSeriesType.Bar" Name="Closed Issues" Data="@closed" Color="#27c46d">
			<TelerikChartSeriesStack Enabled="true" Type="@ChartSeriesStack.Stack100"></TelerikChartSeriesStack>
		</TelerikChartSeries>
		<TelerikChartSeries Type="ChartSeriesType.Bar" Name="Open Issues" Data="@open" Color="#CF3268"></TelerikChartSeries>
	</TelerikChartSeriesItems>

	<TelerikChartCategoryAxes>
		<TelerikChartCategoryAxis Visible="false"></TelerikChartCategoryAxis>
	</TelerikChartCategoryAxes>

	<TelerikChartValueAxes>
		<TelerikChartValueAxis Visible="false">
			<TelerikChartValueAxisMajorGridLines Visible="false"></TelerikChartValueAxisMajorGridLines>
		</TelerikChartValueAxis>
	</TelerikChartValueAxes>


	<TelerikChartLegend Visible="false">
	</TelerikChartLegend>
</TelerikChart>


@functions {
	[Parameter]
	private int Open { get; set; }
	[Parameter]
	private int Closed { get; set; }

	private List<object> open = new List<object>();
	private List<object> closed = new List<object>();

	protected override void OnParametersSet()
    {
		open.Clear();
		closed.Clear();
        open.Add(Open);
		closed.Add(Closed);
    }
}